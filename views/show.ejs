<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <%= blog.title %>
    </div>
    <div class="ui top  ">
        <div class="ui  centered rounded image">
            <img src="<%= blog.image %>">
         </div>
            <div class="content">
                <p>By <%=blog.author %></p>
                <p><%= blog.created.toDateString() %></p>
                
                <div class="description">
                    <p><%- blog.body %></p>
                </div>
            </div>
            
            <a href="/blogs/<%=blog._id %>/edit"><button class="ui positive  button">Edit</button></a>
            
            <form class="ui form" id="delete" action="/blogs/<%=blog._id%>?_method=delete" method="post">
                <button class="ui negative button">Delete</button> 
            </form>
        
     </div>
    
</div>





<% include partials/footer %>