<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
             Edit Blog 
    </div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=put" method="post">
        <div class="field">
            <label>Title</label>
            <input type="text" name="title" value="<%=blog.title %>" >
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="image" value="<%=blog.image %>" >
        </div>
        <div class="field">
            <label>Author</label>
            <input type="text" name="author" value="<%=blog.author%>">
         </div>
        <div class="ui form">
         <div class="field">
            <label>Content</label>
            <textarea name="body" ><%=blog.body %></textarea>
          </div>

          <button class="ui teal large basic button">Update</button>
        
    </form>
</div>

<% include partials/footer %>